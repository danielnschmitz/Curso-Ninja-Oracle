-- CREATED ON 16/10/2021 BY DANIEL.NATAN 
DECLARE 
  V_IMC NUMBER;
  V_PS_PESSOA NUMBER;
  V_NR_ALTURA NUMBER;
  V_DS_IMC    VARCHAR2(50);
BEGIN
  V_PS_PESSOA := 45;
  V_NR_ALTURA := 1.45;
  
  V_IMC := V_NR_ALTURA * V_NR_ALTURA;
  /*V_IMC = 2.1025*/
  V_IMC := ROUND(V_PS_PESSOA / V_IMC,2);
  
  DBMS_OUTPUT.PUT_LINE(V_IMC);
  
  V_IMC := V_PS_PESSOA / (V_NR_ALTURA * V_NR_ALTURA);
  DBMS_OUTPUT.PUT_LINE(V_IMC);
  
  IF V_IMC < 18.5 THEN
    V_DS_IMC := 'ABAIXO DO PESO';
  ELSIF V_IMC >= 18.5 AND V_IMC <= 24.9 THEN
    V_DS_IMC := 'PESO NORMAL';
  ELSIF V_IMC >= 25 AND V_IMC <= 29.9 THEN
    V_DS_IMC := 'SOBREPESO';
  ELSIF V_IMC >= 30 AND V_IMC <= 34.9 THEN
    V_DS_IMC := 'OBESIDADE GRAU I';
  ELSIF V_IMC >= 35 AND V_IMC <= 39.9 THEN
    V_DS_IMC := 'OBESIADE GRAU II';
  ELSE
    V_DS_IMC := 'OBSEIDADE GRAU III OU MÓRBIDA';
  END IF;
  
  DBMS_OUTPUT.PUT_LINE(V_dS_IMC);
  
END;
